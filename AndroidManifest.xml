<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionName="1.0"
    android:versionCode="1"
    package="org.remedy" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_title"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity android:name="org.remedy.RemedyActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.remedy.RemedyListActivity"
            android:label="@string/title_activity_remedy_list"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.remedy.OneRemedyActivity"
            android:label="@string/title_activity_remedy_details" >
        </activity>
        <activity
            android:name="org.remedy.RepertoryActivity"
            android:label="@string/title_activity_repertory" >
        </activity>
    </application>

</manifest>