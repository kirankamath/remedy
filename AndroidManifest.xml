<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.remedy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_title"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity android:name="org.remedy.RemedyActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.remedy.RemedyListActivity"
            android:label="@string/title_activity_remedy_list"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.remedy.OneRemedyActivity"
            android:label="@string/title_activity_remedy_details" >
        </activity>
        <activity
            android:name="org.remedy.repertory.SelectSymptomActivity"
            android:label="@string/title_activity_repertory" >
        </activity>
        <activity
            android:name="org.remedy.repertory.AllSymptomsFragment"
            android:label="@string/title_activity_all_symptoms" >
        </activity>
        <activity
            android:name="org.remedy.repertory.FilteredRemedyActivity"
            android:label="@string/title_activity_filtered_remedy" >
        </activity>
        <activity
            android:name="org.remedy.ListenerActivity"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:host="*"
                    android:pathPattern=".*\\.remedydata" />
                <data android:scheme="content" android:host="*"
                    android:pathPattern=".*\\.remedydata" />
                <data android:scheme="file" android:host="*"
                    android:pathPattern=".*\\.remedydata" />
                <data android:scheme="http" android:host="*"
                    android:pathPattern=".*\\.remedyzip" />
                <data android:scheme="content" android:host="*"
                    android:pathPattern=".*\\.remedyzip" />
                <data android:scheme="file" android:host="*"
                    android:pathPattern=".*\\.remedyzip" />
            </intent-filter>
        </activity>
    </application>

</manifest>